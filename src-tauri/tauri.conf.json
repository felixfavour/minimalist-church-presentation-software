{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Cloud of Worship",
  "version": "0.36.8",
  "identifier": "com.cloudofworship.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run generate"
  },
  "app": {
    "windows": [
      {
        "title": "Cloud of Worship - Control Center",
        "maximized": true,
        "width": 1600,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "label": "main"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:webview:allow-create-webview-window",
            "core:webview:allow-webview-close",
            "core:webview:allow-webview-position",
            "core:webview:allow-webview-size",
            "core:window:allow-create",
            "core:window:allow-close",
            "shell:allow-open",
            "updater:default",
            "process:allow-restart"
          ]
        }
      ]
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYxRDg0OTNGREE5OTExNTAKUldSUUVabmFQMG5ZWWF1ZDlRUVFxSi9OZ1BtZWthdXE3c2lESXVweXBUbjdkcWRwQ3JJNHR0RVUK",
      "endpoints": [
        "https://felixfavour.github.io/minimalist-church-presentation-software/latest.json"
      ],
      "dialog": true,
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
